<?xml version = '1.0' encoding = 'UTF-8'?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation =
     "http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0">
  <servlet>
    <servlet-name>Shop</servlet-name>
    <servlet-class>servlets.ShopServlet</servlet-class>
    <init-param>
      <param-name>JDBC_URL</param-name>
      <param-value>jdbc:mysql://localhost/bookshop?user=root&amp;password=root&amp;verifyServerCertificate=false&amp;useSSL=true</param-value>
      <description>The Database URL to use</description>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Shop</servlet-name>
    <url-pattern>/shop</url-pattern>
  </servlet-mapping>
</web-app>
